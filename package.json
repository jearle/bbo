{
  "name": "api",
  "version": "1.0.0",
  "description": "A public api for RCA's products",
  "private": true,
  "scripts": {
    "build": "yarn tsc",
    "dc": "docker-compose -f docker/dev/docker-compose.yml",
    "dc:up": "yarn dc run --service-ports --rm rca-api-service bash -c 'yarn && bash'",
    "dev": "yarn check --integrity && yarn ts-node-dev --poll --interval 2000 --respawn --transpileOnly src/start.ts",
    "format": "yarn format:test --write",
    "format:test": "yarn prettier --config ./.prettierrc '{src,test}/**/*.{ts,js}'",
    "lint": "tslint '{test,src}/**/*.ts'",
    "precommit": "yarn lint --fix && yarn format && git update-index --again",
    "start": "node ./dist/src/start",
    "test": "yarn jest"
  },
  "author": "Content Delivery",
  "license": "UNLICENSED",
  "dependencies": {
    "@hapi/hapi": "^18.3.1",
    "@hapi/inert": "^5.2.1",
    "@hapi/joi": "^15.1.0",
    "@hapi/vision": "^5.5.2",
    "@types/hapi-auth-jwt2": "^8.0.2",
    "@types/hapi__hapi": "^18.2.5",
    "@types/hapi__inert": "^5.2.0",
    "@types/hapi__vision": "^5.5.0",
    "@types/jest": "^24.0.11",
    "@types/mssql": "^4.0.15",
    "@types/node": "^11.12.0",
    "hapi-auth-jwt2": "^8.4.0",
    "hapi-swagger": "10",
    "jest": "^24.5.0",
    "jest-junit": "^6.3.0",
    "jwks-rsa": "^1.4.0",
    "mssql": "^5.1.0",
    "package": "^1.0.1",
    "prettier": "1.16.4",
    "ts-jest": "^24.0.2",
    "tslint": "^5.14.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.4000"
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "ts-node-dev": "^1.0.0-pre.32"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit"
    }
  },
  "engines": {
    "node": ">=10 <11",
    "yarn": ">=1.13"
  }
}
