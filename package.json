{
  "name": "api",
  "version": "1.0.0",
  "description": "A public api for RCA's products",
  "private": true,
  "scripts": {
    "build": "yarn tsc",
    "dc": "docker-compose -f docker/dev/docker-compose.yml",
    "dc:up": "yarn dc run --rm rca-api-service bash -c 'yarn && bash'",
    "dev": "yarn check --integrity && yarn ts-node-dev --respawn --transpileOnly src/start.ts",
    "format": "yarn prettier --config ./.prettierrc '{src,test}/**/*.{ts,js}' --write",
    "lint": "tslint '{test,src}/**/*.ts'",
    "precommit": "yarn lint --fix && yarn format && git update-index --again",
    "start": "node -e \"require('./dist/src/server').init()\"",
    "test": "yarn jest"
  },
  "author": "Content Delivery",
  "license": "UNLICENSED",
  "dependencies": {
    "@types/hapi": "^18.0.1",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.12.0",
    "hapi": "^18.1.0",
    "typescript": "^3.3.4000"
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "lint-staged": "^8.1.5",
    "prettier": "1.16.4",
    "ts-jest": "^24.0.2",
    "ts-node-dev": "^1.0.0-pre.32",
    "tslint": "^5.14.0",
    "tslint-config-prettier": "^1.18.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit"
    }
  },
  "engines": {
    "node": ">=10 <11",
    "yarn": ">=1.13"
  }
}
