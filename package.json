{
  "name": "api",
  "version": "1.0.0",
  "description": "A public api for RCA's products",
  "private": true,
  "scripts": {
    "build": "yarn tsc",
    "dc": "docker-compose -f docker/dev/docker-compose.yml",
    "dc:up": "yarn dc run --service-ports --rm rca-api-service bash -c 'yarn && bash'",
    "dev": "yarn check --integrity && yarn ts-node-dev --respawn --transpileOnly src/start.ts",
    "format": "yarn format:test --write",
    "format:test": "yarn prettier --config ./.prettierrc '{src,test}/**/*.{ts,js}'",
    "lint": "tslint '{test,src}/**/*.ts'",
    "precommit": "yarn lint --fix && yarn format && git update-index --again",
    "start": "node -e \"require('./dist/src/server').init()\"",
    "test": "yarn jest"
  },
  "author": "Content Delivery",
  "license": "UNLICENSED",
  "dependencies": {
    "@types/hapi": "^18.0.2",
    "@types/inert": "^5.1.2",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.8",
    "@types/vision": "^5.3.6",
    "hapi": "^18.1.0",
    "hapi-auth-jwt2": "^8.4.0",
    "jwks-rsa": "^1.4.0",
    "typescript": "^3.3.4000"
  },
  "devDependencies": {
    "@types/hapi-auth-jwt2": "^8.0.2",
    "husky": "^1.3.1",
    "hapi-swagger": "^9.4.2",
    "inert": "^5.1.3",
    "jest": "^24.5.0",
    "jest-junit": "^6.3.0",
    "prettier": "1.16.4",
    "ts-jest": "^24.0.2",
    "tslint": "^5.14.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.4000",
    "vision": "^5.4.4",
    "ts-node-dev": "^1.0.0-pre.32"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit"
    }
  },
  "engines": {
    "node": ">=10 <11",
    "yarn": ">=1.13"
  }
}
